#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --fail-missing --with python2

override_dh_install:
	# install autopilot tests
	cd tests/autopilot; \
	set -ex; for python in $(shell pyversions -r); do \
		$$python setup.py install --root=$(CURDIR)/debian/tmp --install-layout=deb; \
	done; \
	cd $(CURDIR)
	dh_install -X'*.pyc' --fail-missing
#	Transitional symlink because package was renamed.
	ln -vs /usr/share/ubuntu-html5-ui-toolkit \
	       $(CURDIR)/debian/ubuntu-html5-ui-toolkit/usr/share/ubuntu-html5-theme
